# Doxyfile.in

# Project information
PROJECT_NAME           = "Optic Library"
PROJECT_NUMBER         = @CMAKE_PROJECT_VERSION@
PROJECT_BRIEF          = "A library of efficient data structures and algorithms"

# Input files
INPUT                  = @doxy_main_page@ \
                         @PROJECT_SOURCE_DIR@/algorithms/include \
                         @PROJECT_SOURCE_DIR@/data_structures/include
FILE_PATTERNS          = *.h \
                         *.hpp \
                         *.cpp
RECURSIVE              = YES
USE_MDFILE_AS_MAINPAGE = @doxy_main_page@

# Strip source file paths
STRIP_FROM_PATH        = @CMAKE_CURRENT_SOURCE_DIR@ \
                         @CMAKE_CURRENT_BINARY_DIR@

# Output settings
OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/docs/api
GENERATE_HTML          = YES
GENERATE_LATEX         = NO

# Extraction settings
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
EXTRACT_PACKAGE        = YES
EXTRACT_LOCAL_CLASSES  = YES

# Diagram and graph settings
HAVE_DOT               = YES
UML_LOOK               = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES

# Advanced settings
ALIASES                += "requirements=\xrefitem requirements \"Requirement\" \"Requirements\""
ALIASES                += "algorithm=\xrefitem algorithms \"Algorithm\" \"Algorithms\""
ALIASES                += "datastructure=\xrefitem datastructures \"Data Structure\" \"Data Structures\""

# Source browsing
SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES

# Member grouping
SORT_MEMBER_DOCS       = YES
SORT_BRIEF_DOCS        = YES
SORT_MEMBERS_CTORS_1ST = YES

# Preprocessing
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = YES

# External references
TAGFILES               = 
GENERATE_TAGFILE       = @CMAKE_CURRENT_BINARY_DIR@/docs/opticlibrary.tag

# Search engine
SEARCHENGINE           = YES
SERVER_BASED_SEARCH    = NO

# Warnings
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
